@{
    ViewData["Title"] = "TFE Teams";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="RunPipeline" method="post">
    <div>
        <label for="team_name">Team Name:</label>
        <input type="text" id="team_name" name="team_name" required />
    </div>
    <div>
        <label for="sreadmin_users">SRE Admin Users:</label>
        <input type="email" id="sreadmin_users" name="sreadmin_users" required />
    </div>
    <div>
        <label for="developer_users">Developer Users:</label>
        <input type="email" id="developer_users" name="developer_users" />
    </div>
    <div>
        <label for="readonly_users">Read-Only Users:</label>
        <input type="email" id="readonly_users" name="readonly_users" />
    </div>
    <button type="submit">Run Pipeline</button>
</form>
